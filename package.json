    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@types/webpack-env": "^1.18.1",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
